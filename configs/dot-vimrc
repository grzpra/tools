highlight ExtraWhitespace ctermbg=darkcyan guibg=darkcyan
au ColorScheme * highlight ExtraWhitespace ctermbg=darkcyan guibg=darkcyan

syntax on
au Syntax * syn match ExtraWhitespace /\s\+$\| \+\ze\t/

set background=dark
colorscheme wombat256
set backspace=indent,eol,start
set ruler
set ch=2
map <S-Insert> <MiddleMouse>
map! <S-Insert> <MiddleMouse>
set incsearch
set hlsearch
set nobackup
set number
set novisualbell

" Bind F5 to change between wrap on/off
map <F5> :set wrap!<CR>

" Enable mouse
set mouse=a

" Autofill options
set wildmenu
set wildmode=list:longest
